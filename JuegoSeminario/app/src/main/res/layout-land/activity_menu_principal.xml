<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondodesenfocado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:maxLength="10"
        android:typeface="serif"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="5dp"
        android:id="@+id/nombreUser"
        android:background="@drawable/botonseleccionadocorrecto"
        android:text="User"
        android:textSize="25dp"/>

    <ImageButton
        android:id="@+id/botonPausaMusica"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape"
        android:src="@android:drawable/ic_lock_silent_mode_off"
        android:state_selected="true" />

    <TextView
        android:id="@+id/MenuTexto"
        android:layout_marginTop="50dp"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/iconojuego"
        android:gravity="center"
        android:typeface="serif"
        android:textColor="#090303"
        android:textSize="50sp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="8dp"
        android:padding="16dp"
        android:drawablePadding="8dp"
        android:backgroundTint="#D2FEF4D1"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/MenuTexto">
    <Button
        android:id="@+id/botonJugar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/texto_jugar"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:typeface="serif" />

    <Button
        android:typeface="serif"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/botonRankin"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/botonJugar"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="@string/texto_ranking"/>

    <Button
        android:typeface="serif"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/botonAyuda"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/botonRankin"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="@string/texto_ayuda"/>
</LinearLayout>
</RelativeLayout>
